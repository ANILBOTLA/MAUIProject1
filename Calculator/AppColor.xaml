<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.AppColor"
             Title="AppColor" BackgroundColor="AntiqueWhite">


    <StackLayout>
        <Label Text="Select Your Favourite color"
               VerticalOptions="End" 
               HorizontalOptions="Center"
               FontSize="Large"/>

        <Button Text="Pink"
                VerticalOptions="End"
                HorizontalOptions="Start"
                Clicked="OnButtonClicked"
                BackgroundColor="LightPink"
                />
        <Button Text="Light"
                VerticalOptions="End"
                HorizontalOptions="Start"
                Clicked="OnButtonClicked"
                BackgroundColor="LightBlue"
                
                 />
        <Button Text="Dark"
                VerticalOptions="End"
                HorizontalOptions="Start"
                Clicked="OnButtonClicked"
                BackgroundColor="DarkOrange"
                />
       
        <Button Text="Green"
                VerticalOptions="End"
                HorizontalOptions="Start"
                Clicked="OnButtonClicked"
                BackgroundColor="Green"
                />

    </StackLayout>


</ContentPage>
